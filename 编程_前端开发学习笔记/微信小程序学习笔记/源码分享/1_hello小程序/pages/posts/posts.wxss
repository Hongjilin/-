/* pages/posts/posts.wxss */
swiper {
  width: 100%;
  height: 420rpx
}

swiper image {
  width: 100%;
  height: 100%
}

.post-container {
  display: flex;
  flex-flow: column;
  margin-top: 20rpx;
  margin-bottom: 40px;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 10rpx;
}
.post-author-date{
  margin: 10rpx 0 20rpx 10rpx;
  display: flex;
  align-items: center;
}
.post-author{
  width: 60rpx;
  height: 60rpx;
  font-size: 26rpx;
  border-radius: 50%;
}
.post-date{
  margin-left: 10rpx;
}
.post-title{
  font-size: 34rpx;
  font-weight: 600;
}

.post-mian{
  display: flex;
  flex-flow: column;
}
.post-mian image{
  width: 100%;
  height: 340rpx;
  margin-bottom: 30rpx;
}
.post-content{
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
}

.post-link{
  display: flex;
  margin-left: 20rpx;
  align-items: center;
}
.post-link image{
  width: 32rpx;
  height: 32rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}
.post-link text{
  margin-right: 20rpx;
}